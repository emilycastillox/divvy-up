# Server Environment Variables
# Copy this file to .env and update the values

# Node Environment
NODE_ENV=development

# Server Configuration
PORT=3001
HOST=localhost

# Database Configuration
DATABASE_URL=postgresql://divvyup_user:divvyup_password@localhost:5432/divvyup
DB_HOST=localhost
DB_PORT=5432
DB_NAME=divvyup
DB_USER=divvyup_user
DB_PASSWORD=divvyup_password
DB_SSL=false
DB_POOL_MIN=2
DB_POOL_MAX=10

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-minimum-32-characters
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-jwt-key-here-minimum-32-characters
JWT_REFRESH_EXPIRES_IN=30d

# Client Configuration
CLIENT_URL=http://localhost:3000

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_SECURE=false
FROM_EMAIL=noreply@divvyup.com
FROM_NAME=DivvyUp

# Payment Provider Configuration
PAYMENT_PROVIDER=none
PAYMENT_WEBHOOK_SECRET=your-webhook-secret-key

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGIN=http://localhost:3000

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=combined

# File Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf
UPLOAD_DIR=./uploads

# Notification Configuration
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_PUSH_NOTIFICATIONS=false

# Development Configuration
ENABLE_DEBUG=false
ENABLE_SWAGGER=false
MOCK_PAYMENTS=false
