{
  "name": "@divvy-up/server",
  "version": "1.0.0",
  "description": "DivvyUp Node.js server application",
  "private": true,
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server-v2.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "test:ui": "jest --watch --verbose",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "jest --testPathPattern=e2e",
    "lint": "eslint . --ext ts --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist node_modules/.cache",
    "build:watch": "tsc --watch",
    "build:analyze": "npm run build && npx webpack-bundle-analyzer dist/static/js/*.js",
    "start:prod": "NODE_ENV=production node dist/server.js",
    "start:debug": "node --inspect dist/server.js",
    "start:inspect": "node --inspect-brk dist/server.js",
    "dev:debug": "tsx watch --inspect src/server.ts",
    "dev:inspect": "tsx watch --inspect-brk src/server.ts",
    "dev:clear-cache": "rm -rf node_modules/.cache && npm run dev",
    "db:migrate": "tsx src/migrations/simple-migrate.ts migrate",
    "db:rollback": "tsx src/migrations/migrate.ts rollback",
    "db:status": "tsx src/migrations/simple-migrate.ts status",
    "db:seed": "tsx src/seeders/simple-seed.ts seed",
    "db:clear": "tsx src/seeders/simple-seed.ts clear",
    "db:reset": "npm run db:migrate && npm run db:seed",
    "benchmark": "tsx src/scripts/benchmark.ts",
    "load-test": "tsx src/scripts/load-test.ts",
    "health-check": "curl -f http://localhost:3001/health || exit 1",
    "logs:tail": "tail -f logs/app.log",
    "logs:clear": "rm -rf logs/*.log",
    "docs": "tsx src/scripts/generate-docs.ts",
    "swagger": "tsx src/scripts/generate-swagger.ts"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.2.1",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.7",
    "pg": "^8.11.3",
    "redis": "^4.6.12"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.5",
    "@types/nodemailer": "^6.4.14",
    "@types/pg": "^8.10.9",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "tsx": "^4.6.2",
    "typescript": "^5.2.2"
  }
}
