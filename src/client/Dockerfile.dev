# Development Dockerfile for Client
FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./
COPY src/client/package*.json ./

# Install dependencies
RUN npm ci

# Copy source code
COPY src/client/ ./

# Expose port
EXPOSE 3000

# Start development server
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]
